/* pages/fei/fei.wxss */
.slide-image {
  width: 100%;
  height: 100%;
}

.swiper-item {
  border: 10rpx solid #fff;
  box-sizing: border-box;
}

.swiper-content {
  width: 100%;
  height: 300rpx;
  transition: all .5s;
}

.swiper-content image {
  border-radius: 12rpx;
  box-sizing: border-box;
}

.swiper-active-left {
  transform: scale(.85) translateX(100rpx);
}

.swiper-active-right {
  transform: scale(.85) translateX(-100rpx);
}

.scroll-view-item {
  height: 150rpx;
}

.scroll-view-item:first-child {
  border-top: 1rpx solid #fff;
}

.scroll-view-item:nth-child(odd) {
  background: #aaa;
}

.scroll-view-item:nth-child(odd) {
  background: #999
}