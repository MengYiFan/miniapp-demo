/* pages/payLicence/payLicence.wxss */
.table {
  width: 100vw;
  height: calc(100vh - 100rpx);
  margin-top: 100rpx;
  background-color: #f7f7f8;
}

.table-cell {
  position: relative;
  padding: 30rpx;
  margin: 30rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.table-cell-index {
  position: absolute;
  right: 0;
  bottom: 0;
  height: 24rpx;
  line-height: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 24rpx 4rpx 0 24rpx;
  background-color: #f7f7f8;
  font-size: 22rpx;
  color: #b6b6b6;
}

.table-cell-title {
  font-size: 30rpx;
  color: #b6b6b6;
}

.table-cell-content {
  margin-top: 8rpx;
  font-size: 36rpx;
  color: #444;
}

.copyright {
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #aaa;
  text-align: center;
}

.search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f7f7f8;
  z-index: 999;
}

.highlight {
  background-color: #ff9631;
}

.highlight .table-cell-title,
.highlight .table-cell-content,
.highlight .table-cell-index {
  background-color: #ff9631;
  color: #fff;
}

input {
  padding: 20rpx 30rpx;
  color: #444;
  width: calc(100% - 70rpx);
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}

.search-btn {
  position: absolute;
  right: 33rpx;
  top: 50%;
  height: 60rpx;
  transform: translateY(-50%);
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: 100;
  color: #555;
}

.input-placeholder {
  font-weight: 100;
  color: #b6b6b6;
}